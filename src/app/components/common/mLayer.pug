include /components/grade
include /components/slider

mixin mLayer(id, title, desc, typeClass)
  - var types = id.replace('layer', '');
  div(id=`${id}` class=`mLayer${!typeClass ? '' : ' '+typeClass}`)
    div.wrap
      div.head
        if title
          h3.title= title
        if desc
          p.desc= desc
        button(type="button" class="btnClose eCloseLayer") 닫기
      div.content
        case types
          when 'Install'
            div.inputArea
              // 입력 오류
              //- input(type="text" class="inputNormal full large error" placeholder="쇼핑몰 ID를 입력해주세요.")
              input(name="" type="text" class="fText full large" placeholder="쇼핑몰 ID를 입력해주세요.")
            div.btnArea
              // 입력 미완료
              //- button(type="submit").btnSubmit.full.large.disabled 완료
              // 입력 완료
              button(type="submit").btnSubmit.full.large 완료
            div.txtArea
              p
                | 아직 쇼핑몰이 없으신가요?
                a(href="#none").txtEm 무료 쇼핑몰 만들기
          when 'Review'
            div.reviewArea
              +grade(0)
              // 평점 클릭 전
              //-  div.scoreWrap
                //-  p 별을 눌러 상품 평점을 남겨주세요.
              // 평점 클릭 후
              div.scoreWrap.active
                p 평점
                  span 4.0
            div.inputArea
              textarea(name="" cols="", rows="" class="fTextarea" placeholder="상품에 대한 소중한 평가를 남겨주세요.\n(5자 이상 입력)")
            div.infoArea
              ul.infoList
                li 상품 문의는 파트너 문의하기를 통해 남겨주세요.
                li 아이디, 비밀번호 등의 개인 정보는 포함하지 않도록 주의하세요.
                li 개인정보, 저작권 침해, 음란, 욕설, 비방, 홍보성 글을 등록한 경우 관리자에 의해 임의 삭제될 수 있습니다.
            div.btnArea
              // 입력 미완료
              //- button(type="submit").btnSubmit.full.large.disabled 완료
              // 입력 완료
              button(type="submit").btnSubmit.full.large 완료
          when 'Question'
            div.partnerArea
              div.image
                img(src="/images/@img_partner_icon.jpg" alt="파트너사")
              div.info
                strong.name 파트너사
                a(href="#none" target="_blank") www.partnerone.co.kr
                a(href="#none") help@onedes.com
            div.inputArea
              label(for="") 제목
              input(type="text" name="" class="fText full large" placeholder="10자 이상, 30자 이내로 입력하세요.")
              label(for="") 문의내용
              textarea(name="" cols="", rows="" class="fTextarea" placeholder="10자 이상, 200자 이내로 입력하세요.")
            div.infoArea
              ul.infoList
                li 음란, 욕설, 비방, 홍보성 글 등을 작성할 경우 법적제재를 받을 수 있습니다.
            div.btnArea
              // 입력 미완료
              //- button(type="submit").btnSubmit.full.large.disabled 완료
              // 입력 완료
              button(type="submit").btnSubmit.full.large 완료
          when 'Alert'
            div.alertArea
              p.desc 상품 구매 후 작성할 수 있습니다.
            div.btnArea
              button(type="button").btnSecondary.large 취소
              button(type="submit").btnSubmit.large 완료
          when 'ScreenShot'
            - var screenShotTheme = 'screenShotTheme'
            - var screenShotThemeData = require('./src/js/data/screenShotTheme.js');
            +slider(screenShotTheme, screenShotThemeData, 'typeScreenShot', 'image', false, true)
          when 'FaqTop'
            div.faqTopLayer
              div.head
                strong.title 앱은 어떻게 설치하나요?
              div.content 사용하지 않는 앱이라면 쇼핑몰 관리자 화면의 [앱스토어] 메뉴에서 앱을 선택한 후 [삭제] 버튼을 누르면, 해당 앱은 메뉴에서 앱을 선택한 후 [삭제] 버튼을 누르면, 해당
              div.footer
                button(type="button").btnPrev
                button(type="button").btnNext
